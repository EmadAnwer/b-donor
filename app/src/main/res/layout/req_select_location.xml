<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Req_select_location"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:forceHasOverlappingRendering="true"
            app:srcCompat="@drawable/left_arrow" />

        <Button
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Set Request Location"
            android:textAlignment="textStart"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Please Select your Location City"
        android:textColor="@color/main_red"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/set_req_city"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:text="Please Select your Location Hospital"
        android:textColor="@color/main_red"
        android:textSize="20dp"/>


    <Spinner
        android:id="@+id/set_req_hospital"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/next_2_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="300dp"/>


</LinearLayout>