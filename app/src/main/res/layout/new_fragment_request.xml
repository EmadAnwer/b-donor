<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="665dp">

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/main_req_frame">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Request"
        android:textSize="16dp"
        android:textAlignment="textStart"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/new_request_icon"
        android:layout_width="173dp"
        android:layout_height="198dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/new_request_icon" />

    <ImageView
        android:id="@+id/track_request_icon"
        android:layout_width="245dp"
        android:layout_height="251dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="85dp"
        app:srcCompat="@drawable/track_request_icon" />

    <ImageView
        android:id="@+id/history_icon"
        android:layout_width="229dp"
        android:layout_height="271dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="330dp"
        app:srcCompat="@drawable/history_icon" />

</FrameLayout>

</RelativeLayout>