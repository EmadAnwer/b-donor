<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="665dp"
    android:id="@+id/navigate_to_Rating"
    tools:context=".Rating_Frag">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_from_rating"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:forceHasOverlappingRendering="true"
            android:src="@drawable/left_arrow" />

        <Button
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Rating"
            android:textAlignment="textStart"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How satisfied are you with our service ?"
        android:textColor="@color/main_red"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="26dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="80dp"
            android:numStars="5" />

        <ImageView
            android:id="@+id/red_line1"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:src="@drawable/redline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you have any comments would you like to write it please !"
            android:textColor="@color/main_red"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="26dp"/>

        <EditText
            android:id="@+id/rating_comment"
            android:layout_width="365dp"
            android:layout_height="161dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:outlineProvider="bounds"/>

        <Button
            android:id="@+id/done_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginLeft="280dp"/>


    </LinearLayout>

</FrameLayout>