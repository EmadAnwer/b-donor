<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient_Request">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_from_pat_req1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:forceHasOverlappingRendering="true"
            app:srcCompat="@drawable/left_arrow" />

        <Button
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Request"
            android:textAlignment="textStart"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Name"
        android:textSize = "20sp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter first Name"
        android:textColorHint="@color/light_gray"
        android:layout_marginLeft="130dp"
        android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize = "20sp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:textColorHint="@color/light_gray"
        android:layout_marginLeft="50dp"
        android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Blood type:"
            android:textSize = "20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

            <RadioGroup
                android:id="@+id/blood_type_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="80dp">
                <RadioButton
                    android:id="@+id/blood_a_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A" />
                <RadioButton
                    android:id="@+id/blood_b_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B" />

                <RadioButton
                    android:id="@+id/blood_ab_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB" />
                <RadioButton
                    android:id="@+id/blood_o_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="O" />
            </RadioGroup>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="RH Type"
            android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/blood_type_ab__btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="108dp">
                <RadioButton
                    android:id="@+id/pos_ab_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postive" />
                <RadioButton
                    android:id="@+id/neg_ab_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Negative" />


            </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Age"
            android:textSize = "15dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your Age"
            android:textColorHint="@color/light_gray"
            android:layout_marginLeft="158dp"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Gender"
            android:textSize = "15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <RadioGroup
            android:id="@+id/patient_gender_btn"
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="135dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/pat_male_btn"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:text="Male" />

            <RadioButton
                android:id="@+id/pat_female_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Female" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Quantity"
            android:textSize = "15dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter needed quantity"
            android:textColorHint="@color/light_gray"
            android:layout_marginLeft="128dp"
            android:inputType="number"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Please Select your Location City"
        android:textColor="@color/main_red"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/set_req_city"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:text="Please Select your Location Hospital"
        android:textColor="@color/main_red"
        android:textSize="20dp"/>


    <Spinner
        android:id="@+id/set_req_hospital"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp" />



    <Button
        android:id="@+id/btnSelectPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="5dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Please click here to upload your official document picture" />

    <ImageView
        android:id="@+id/upload_document_pic"
        android:layout_width="wrap_content"
        android:layout_height="404dp"
        android:src="@drawable/upload_document" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/done_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:onClick="request"
            android:text="Done" />
    </LinearLayout>




</LinearLayout>


</ScrollView>