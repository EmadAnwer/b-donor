<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F1ECEC"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Req_upload_document_picture">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:forceHasOverlappingRendering="true"
            app:srcCompat="@drawable/left_arrow" />

        <Button
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:text="Upload Request Offcial Document"
            android:textAlignment="textStart"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSelectPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="5dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Please upload your official document picture" />

    <ImageView
        android:id="@+id/upload_document_pic"
        android:layout_width="wrap_content"
        android:layout_height="404dp"
        android:src="@drawable/upload_document" />


        <Button
            android:id="@+id/finish_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:text="Finish" />


</LinearLayout>