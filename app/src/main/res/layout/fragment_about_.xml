<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="665dp"
    android:id="@+id/navigate_to_about"
    tools:context=".About_Frag">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/about_background"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_from_about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:forceHasOverlappingRendering="true"
            android:src="@drawable/left_arrow" />

        <Button
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="About"
            android:textAlignment="textStart"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginHorizontal="20dp"
        android:text="We are working to save more lives
as much as we can by connecting people with each other and
with hospitals, blood banks for finding the donors faster.
As it helps to save time and effort to find the compatible
donor"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="480dp"
        android:text="Email:bdonor3@gmail.com"
        android:textColor="@color/main_red"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="530dp"
        android:layout_marginHorizontal="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be Donor... Be Hero"
        android:textSize="30dp"
        android:textColor="@color/given_red"
        android:textStyle="bold"/>

        <ImageView
            android:layout_width="42dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/blooddrop" />

    </LinearLayout>



</FrameLayout>