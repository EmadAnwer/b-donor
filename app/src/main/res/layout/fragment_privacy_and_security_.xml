<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="665dp"
    android:id="@+id/navigate_to_privacy"
    tools:context=".Privacy_and_security_Frag">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_from_privacy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:forceHasOverlappingRendering="true"
            android:src="@drawable/left_arrow" />

        <Button
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Privacy and Security"
            android:textAlignment="textStart"
            android:textStyle="bold" />

    </LinearLayout>

        <Button
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#D8D7D7"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:text="Change your Password"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/Save_login_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#D8D7D7"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:text="Save Login Info"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

  </LinearLayout>

</FrameLayout>